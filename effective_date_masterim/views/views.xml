<odoo>
    <record id="view_picking_form_effective_date" model="ir.ui.view">
        <field name="name">stock.picking.form.effective.date</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Place Effective Date near Scheduled Date -->
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="date_done"
                       readonly="state == 'done'"
                       help="Effective date of the delivery or receipt"/>
            </xpath>

        </field>
    </record>
</odoo>
