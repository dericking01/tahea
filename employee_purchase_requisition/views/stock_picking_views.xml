<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Adding field in the stock picking form view -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.employee.purchase.requisition</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id"
               ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']"
                   position="after">
                <field name="requisition_order"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_form_in_transit" model="ir.ui.view">
        <field name="name">stock.picking.form.in.transit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Add Mark In-Transit button in header -->
            <header position="inside">
                <button name="action_mark_in_transit"
                        string="Mark In-Transit"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'assigned' or picking_type_code != 'internal'"
                        />
            </header>

        <xpath expr="//header/button[@name='button_validate'][@class='o_btn_validate']" position="replace">
            <!-- Empty - removes the button completely -->
        </xpath>
        
        <!-- Modify the first validate button to show in multiple conditions -->
        <xpath expr="//header/button[@name='button_validate'][@class='oe_highlight']" position="attributes">
            <attribute name="invisible">
                not (
                    (picking_type_code == 'internal' and state == 'in_transit') or
                    (picking_type_code == 'incoming' and state == 'assigned') or
                    (picking_type_code == 'outgoing' and state == 'assigned')
                )
            </attribute>
            <!-- Optionally change the string based on picking type -->
            <attribute name="string">
                Validate
                <t t-if="picking_type_code == 'internal'">In-Transit</t>
                <t t-if="picking_type_code in ['incoming', 'outgoing']">Delivery</t>
            </attribute>
        </xpath>

        </field>
    </record>
</odoo>