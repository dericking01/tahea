<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Payroll Report Wizard Form View -->
    <record id="view_payroll_report_view_form" model="ir.ui.view">
        <field name="name">payroll.report.wiz.form</field>
        <field name="model">payroll.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Payroll Report">
                <group>
                    <field name="from_date"/>
                    <field name="date_end"/>
                    <field name="company" invisible="1"/>
                </group>
                <footer>
                    <button name="get_item_data" type="object" string="Print" class="btn btn-primary"/>
                    <button string="Cancel" class="btn btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Payroll Report Download View -->
    <record id="view_payroll_excel" model="ir.ui.view">
        <field name="name">payroll.report.excel.form</field>
        <field name="model">payroll.report.excel</field>
        <field name="arch" type="xml">
            <form string="Download Payroll Report">
                <group>
                    <field name="name" invisible="1"/>
                    <field name="file_download" filename="name"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Payroll Report Action -->
    <record id="action_payroll_reporting_excel" model="ir.actions.act_window">
        <field name="name">Payroll Report</field>
        <field name="res_model">payroll.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Payroll Report Menu Item under Enterprise Payroll -->
    <menuitem id="menu_hr_payroll_excel_report"
              name="Payroll Excel Report"
              parent="hr_payroll.menu_hr_payroll_report"
              action="action_payroll_reporting_excel"
              groups="hr_payroll.group_hr_payroll_manager"/>

</odoo>
