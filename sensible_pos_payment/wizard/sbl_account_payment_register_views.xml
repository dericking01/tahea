<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sbl_view_pos_invoice_payment_register_form" model="ir.ui.view">
        <field name="name">SBL POS Invoice Payment Register Form</field>
        <field name="model">account.payment.register</field>
        <field name="arch" type="xml">
            <form string="Register Payment">
                <field name="line_ids" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="payment_type" invisible="1"/>
                <field name="partner_type" invisible="1"/>
                <field name="can_edit_wizard" invisible="1"/>
                <field name="can_group_payments" invisible="1"/>
                <field name="available_journal_ids" invisible="1"/>
                <field name="available_payment_method_line_ids" invisible="1"/>
                <field name="available_partner_bank_ids" invisible="1"/>
                <field name="show_partner_bank_account" invisible="1"/>
                <field name="require_partner_bank_account" invisible="1"/>
                <field name="payment_difference" invisible="1"/>

                <group>
                    <group>
                        <field name="journal_id" 
                               options="{'no_open': True, 'no_create': True}" 
                               required="1"/>
                        <field name="payment_method_line_id"
                               options="{'no_create': True, 'no_open': True}"
                               required="1"/>
                        <field name="partner_bank_id"
                               invisible="not show_partner_bank_account"
                               required="require_partner_bank_account"
                               string="Recipient Bank Account"/>
                    </group>
                    <group>
                        <field name="amount" required="1"/>
                        <field name="currency_id" 
                               options="{'no_create': True, 'no_open': True}"
                               groups="base.group_multi_currency"/>
                        <field name="payment_date" required="1"/>
                        <field name="communication"/>
                        <field name="group_payment" 
                               string="Group Payments" 
                               invisible="not can_group_payments"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="sbl_account_invoice_payment_register_form_action" model="ir.actions.act_window">
        <field name="name">Register Invoice Payment</field>
        <field name="res_model">account.payment.register</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="sbl_view_pos_invoice_payment_register_form"/>
    </record>
</odoo>