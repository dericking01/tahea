<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_form_inherit_button_visibility" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.button.visibility</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Target the button with id="bid_confirm" (sent state button) -->
                <button id="bid_confirm" position="attributes">
                    <attribute name="invisible">state not in ('sent', 'finance_approved')</attribute>
                </button>
                
                <!-- Target the button with id="draft_confirm" (draft state button) and hide it completely -->
                <button id="draft_confirm" position="attributes">
                    <attribute name="invisible">True</attribute>
                </button>
            </field>
        </record>
    </data>
</odoo>