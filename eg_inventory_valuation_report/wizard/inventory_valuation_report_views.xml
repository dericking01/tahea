<odoo>
    <record id="view_inventory_valuation_report_form" model="ir.ui.view">
    <field name="name">inventory.valuation.report.form</field>
    <field name="model">inventory.valuation.report</field>
    <field name="arch" type="xml">
        <form string="Inventory Valuation Report" version="16.0">
            <sheet>
                <group>
                    <group>
                        <field name="start_date" class="o_datepicker"/>
                        <field name="end_date" class="o_datepicker"/>
                    </group>
                    <group>
                        <field name="location_ids" widget="many2many_tags" options="{'no_create': True}" placeholder="Select Locations"/>
                    </group>
                    <group>
                        <field name="filter_by" widget="radio"/>
                    </group>
                    <group>
                        <field name="company_id" options="{'no_create': True}"/>
                    </group>
                </group>
            </sheet>
            <footer>
                <button name="action_export_xls" type="object" string="Export XLS" class="btn btn-primary"/>
                <!-- <button name="action_print_pdf" type="object" string="Export PDF" class="btn btn-primary"/> -->
                <button string="Cancel" class="btn btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>


    <record id="action_inventory_valuation_report" model="ir.actions.act_window">
        <field name="res_model">inventory.valuation.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_inventory_valuation_report_form"/>
        <field name="target">new</field>
    </record>
    <menuitem name="Inventory Valuation Report" id="import_inventory_valuation_report_wizard"
              action="action_inventory_valuation_report"
              parent="stock.menu_warehouse_report"/>
</odoo>
