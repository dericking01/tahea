<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="abk_purchase_order_iinherit_form" model="ir.ui.view">
            <field name="name">purchase.order.abk.form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="abk_amount_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="abk_payment_status"/>
                </field>
            </field>
        </record>
        <record id="abk_purchase_order_list" model="ir.ui.view">
            <field name="name">view_purchase_order_abk_list</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="abk_amount_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="abk_payment_status" widget="badge" optional="show"
                           decoration-danger="abk_payment_status == 'not_paid'"
                           decoration-success="abk_payment_status == 'fully_paid'"
                           decoration-info="abk_payment_status == 'nothing'"
                           decoration-warning="abk_payment_status == 'partial_paid'"/>
                </xpath>
            </field>
        </record>
        <record id="abk_purchase_order_view_list" model="ir.ui.view">
            <field name="name">purchase.order.list.abk</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="abk_amount_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="abk_payment_status" widget="badge" optional="show"
                           decoration-danger="abk_payment_status == 'not_paid'"
                           decoration-success="abk_payment_status == 'fully_paid'"
                           decoration-info="abk_payment_status == 'nothing'"
                           decoration-warning="abk_payment_status == 'partial_paid'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>