<odoo>
    <template id="dynamic_accounts_report.trial_balance">
        <t t-call="dynamic_accounts_report.trial_balance1" t-lang="request.env.user.lang"/>
    </template>

    <template id="dynamic_accounts_report.trial_balance1">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <style>
                        .report-header {
                            text-align: center;
                            margin-bottom: 20px;
                            border-bottom: 2px solid #2c6ecb;
                            padding-bottom: 15px;
                        }
                        .report-title {
                            font-size: 24px;
                            font-weight: bold;
                            color: #2c6ecb;
                            margin-bottom: 5px;
                        }
                        .date-container {
                            display: flex;
                            justify-content: center;
                            gap: 30px;
                            margin-bottom: 15px;
                        }
                        .date-box {
                            background-color: #f0f7ff;
                            padding: 8px 15px;
                            border-radius: 5px;
                            font-weight: bold;
                        }
                        .filter-section {
                            background-color: #f8f9fa;
                            padding: 15px;
                            border-radius: 8px;
                            margin-bottom: 20px;
                        }
                        .filter-grid {
                            display: grid;
                            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                            gap: 15px;
                        }
                        .filter-group {
                            background-color: white;
                            padding: 10px;
                            border-radius: 5px;
                            border: 1px solid #e0e0e0;
                        }
                        .filter-label {
                            font-weight: bold;
                            color: #444;
                            margin-bottom: 5px;
                            border-bottom: 1px solid #eee;
                            padding-bottom: 3px;
                        }
                        .filter-value {
                            font-size: 13px;
                        }
                        .table-reports {
                            width: 100%;
                            border-collapse: collapse;
                            margin-top: 10px;
                        }
                        .table-reports th {
                            background-color: #2c6ecb;
                            color: white;
                            padding: 12px 15px;
                            text-align: left;
                        }
                        .table-reports td {
                            padding: 10px 15px;
                            border-bottom: 1px solid #eaeaea;
                        }
                        .text-right {
                            text-align: right;
                        }
                        .text-left {
                            text-align: left;
                        }
                        .total-row {
                            font-weight: bold;
                            background-color: #f2f7ff;
                        }
                    </style>

                    <div class="report-header">
                        <div class="report-title">
                            <span t-esc="Filters.get('company_name')"/>: Trial Balance
                        </div>
                        
                        <div class="date-container">
                            <t t-if="Filters.get('date_from')">
                                <div class="date-box">
                                    <span>From: </span>
                                    <span t-esc="Filters['date_from']"/>
                                </div>
                            </t>
                            <t t-if="Filters.get('date_to')">
                                <div class="date-box">
                                    <span>To: </span>
                                    <span t-esc="Filters['date_to']"/>
                                </div>
                            </t>
                        </div>
                    </div>

                    <div class="filter-section">
                        <div class="filter-grid">
                            <div class="filter-group">
                                <div class="filter-label">Journals</div>
                                <div class="filter-value">
                                    <t t-foreach="Filters['journals']" t-as="ps">
                                        <div><t t-esc="ps"/></div>
                                    </t>
                                </div>
                            </div>
                            
                            <div class="filter-group">
                                <div class="filter-label">Analytic Accounts</div>
                                <div class="filter-value">
                                    <t t-foreach="Filters.get('analytic_accounts', ['All'])" t-as="aa">
                                        <div><t t-esc="aa"/></div>
                                    </t>
                                </div>
                            </div>
                            
                            <div class="filter-group">
                                <div class="filter-label">Target Move</div>
                                <div class="filter-value">
                                    <t t-esc="Filters['target_move']"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table-reports">
                        <thead>
                            <tr>
                                <th class="text-left">Code</th>
                                <th colspan="5" class="text-left">Account</th>
                                <t t-if="Filters.get('date_from')">
                                    <th class="text-right">Initial Debit</th>
                                    <th class="text-right">Initial Credit</th>
                                </t>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="account_data" t-as="line">
                                <tr>
                                    <td class="text-left">
                                        <span t-esc="line['code']"/>
                                    </td>
                                    <td colspan="5" class="text-left">
                                        <span t-esc="line['name']"/>
                                    </td>
                                    <t t-if="Filters.get('date_from')">
                                        <td class="text-right">
                                            <t t-if="line.get('Init_balance')">
                                                <span t-esc="float(line['Init_balance'].get('debit', 0.0))"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="0.0" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="line.get('Init_balance')">
                                                <span t-esc="float(line['Init_balance'].get('credit', 0.0))"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="0.0" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </t>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <span t-esc="float(line.get('debit', 0.0))"
                                            t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="float(line.get('credit', 0.0))"
                                            t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="total-row">
                                <td colspan="6" class="text-left"><strong>Total</strong></td>
                                <t t-if="Filters.get('date_from')">
                                    <td class="text-right"></td>
                                    <td class="text-right"></td>
                                </t>
                                <td class="text-right"><strong>
                                    <span t-esc="float(debit_total or 0.0)" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </strong></td>
                                <td class="text-right"><strong>
                                    <span t-esc="float(credit_total or 0.0)" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </strong></td>
                            </tr>
                        </tbody>
                    </table>

                    <div style="margin-top: 30px; font-size: 11px; color: #777; text-align: center; border-top: 1px solid #eee; padding-top: 10px;">
                        Generated on <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M')"/> | Dynamic Accounts Report
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_print_trial_balance" model="ir.actions.report">
        <field name="name">Trial Balance</field>
        <field name="model">account.trial.balance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dynamic_accounts_report.trial_balance</field>
        <field name="report_file">dynamic_accounts_report.trial_balance</field>
    </record>
</odoo>